<section>
  <div>
    <%= render @user %>
  </div>
  <div class="user-card">
    <div class="user-info border-deco">
      <h3>Bio</h3>
      <p>
        <%= @user.bio%>
      </p>
    </div>
    <div>
      <%= render partial: "posts/post", collection: @user.posts %>
    </div>
  </div>
   <%= render template: 'posts/new', collection: @user.posts %>
  <div class="post-btn d-flex">
   <button class="posts-btn border-deco">
      <%= link_to 'See All Posts', user_posts_path(@user.id) %>
    </button>
  </div>
</section>