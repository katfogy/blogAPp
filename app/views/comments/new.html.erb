<div class="form-card">
<%= form_with model: @comment, url: user_post_comments_path(post_id: @post.id), method: :post, local: true, scope: :add_comment do |form| %>
  <div>
    <%= form.label :text %><br>
    <%= form.text_area :text, size: "90x5" %>
  </div>

  <%= form.submit %>
<% end %>

<% flash.each do |name, msg| -%>
  <%= content_tag :span, msg, class: name %>
<% end -%>
</div>